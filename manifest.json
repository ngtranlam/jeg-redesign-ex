{
  "manifest_version": 3,
  "name": "Screen Capture Extension",
  "version": "1.0",
  "description": "Capture screenshots and save them",
  "permissions": [
    "activeTab",
    "tabs",
    "desktopCapture",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Screen Capture"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/cropicon.png",
    "48": "icons/cropicon.png",
    "128": "icons/cropicon.png"
  }
} 